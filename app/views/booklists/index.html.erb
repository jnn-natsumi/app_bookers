
<body>
<h1>Books</h1>

<table>
	<thead>
		<tr>
			<!-- show edit destroyの幅を詰めたい　thを長さによって自動的に変わるようにしたい -->
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
<tbody>
<% @books.each do |book| %>
	<tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", booklist_path(book.id) , class: "button"%></td>
		<td><%= link_to "Edit", edit_booklist_path(book.id) , class: "button"%></td>
		<td><%= link_to "Destroy",destroy_booklist_path(book.id), method: :delete, "data-confirm" =>"Are you sure?" , class: "button"%></td>
	</tr>
	<% end %>

</tbody>
</table>

<h2>New Book</h2>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

<!-- エラーメッセージ	 -->
<% if @book.errors.any? %>
<div class="error_explanation">
<h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
<ul>
	<% @book.errors.full_messages.each do |book| %>
	<li><%= book %></li>
		<% end %>
	</ul>
</div>
<% end %>
<!-- ここまで -->
<!-- エラーが出た時にtitleとbodyが赤くなるようにするには？ -->
<div class="field">
	<label>Title</label><br>
	<%= f.text_field :title %>
</div>

<div class="field">
	<label>Body</label><br>
	<%= f.text_area :body %>
</div>

<div class="actions">
    <%= f.submit 'Create Book' %>
</div>

<% end %>

</body>

