<!-- 編集用のhtml -->
<!-- booklists_controllerにeditを追加したため -->
<% if @book.errors.any? %>
	<div class="error_explanation">
		<h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
	<ul>
		<% @book.errors.full_messages.each do |book| %>
			<li><%= book %></li>
		<% end %>
	</ul>
</div>
<% end %>

<h1>Editing Book</h1>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
<!-- エラーが出た時にtitleとbodyが赤くなるようにするには？ -->

	<div class="field">
		<label>Title</label><br>
	    <%= f.text_field :title %>
    </div>

    <div class="field">
         <label>Body</label><br>
         <%= f.text_area :body %>
     </div>

    <div class="action">
	<%= f.submit 'Update Book' %>
    </div>

<% end %>

<%= link_to "Show", booklist_path , class: "button"%> |
<%= link_to "Back", booklists_path , class: "button"%>